<div class="app">
{%extends "layout.njk"%}
    {%block content%}
        <div class="recipe__details" id="{{items.id}}" >
            <div class="recipe__image">
                <img src="{{items.image}}" alt="{{items.title}}">
            </div>
            <div class="recipes__information">
                <h4 class="recipe__title">{{items.title}}</h4>
                <p class="recipe__author">{{items.author}}</p>
            </div>
        </div>
        <script src="scripts.js"></script> 
    {% endblock %}
</div>